<div class="col-xs-12 ">
    <%= link_to 'Back', posts_path, class: 'btn btn-default pull-right' %>
  </div>

  <div class="col-xs-12">
    <h2  class="page-header">Files name:<%= @post.title %></h2>
      <div class="panel panel-default">
        <div class="panel-heading"><h6 >Author: <%= @post.author %>, <%= @post.updated_at.strftime("on %m/%d/%Y") %></h6></div>
        <div class="panel-body">
        <p class="panel panel-body">content<%= @post.content %></p>
      </div>
      </div>
    </div>

      <div class="col-xs-10" >
        <div class="row" >
          <% @comments.each do |comment| %>
            <div class="col-md-12">
              <h3><%= comment.author %></h3>
              <p><%= comment.content %></p>
            </div>
          <% end %>
        </div>
    </div>
    </div>

  <div class="col-md-8" >
    <div class="row">
      <div class="col-md-6">
        <%= form_for @comment do |f| %>
          <%= f.hidden_field :post_id, value: @post.id %>

          <div class="form-group">
            <%= f.label :author, 'Autor:' %>
            <%= f.text_field :author, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :content, 'Autor:' %>
            <%= f.text_area :content, required: true, class: 'form-control' %>
          </div>

          <div class="form-group text-right">
            <%= f.submit "Comentar", class: 'btn btn-success' %>
          </div>

        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
